<h2>Select your credit pack to buy</h2>

<% @packs.each do |pack| %>

<div class="card rounded my-4" style="max-width: 150rem;">
  <div class="card-body">
    <h4 class="card-title"><%= pack.name %></h4>
    <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency pack.price, unit: 'Rs.' %></h6>
    <p class="card-text"><%= pack.credit %></p>
    <%= button_to "Buy", pack_payment_path(pack.id), method: :get, class: "card-link br-10" %>
  </div>
</div>
<% end %>
<br>
