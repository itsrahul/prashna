<div class="row">
  <div class="card col-sm-10 col-md-5">
    <div class="card-body">
      <h5 class="card-title"><%= @pack.name %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item h5">Credits: <%= @pack.value %></li>
      <li class="list-group-item h5">Price: <%= number_to_currency @pack.price, unit: 'Rs.' %></li>
    </ul>
  </div>

  <div class="col-sm-10 col-md-6 offset-md-1">
    <hr/>
    <%= form_with local: true, id: "payment-form", data: { stripe_token: Rails.configuration.stripe[:publishable_key]} do %>

      <label for="card-element">
        <div class="row"><h3 class= 'col-7'>Pay via Card</h3><%= image_tag "payment_types.png", class: 'col-5' %></div>
      </label>
      <div id="card-element"></div>
      <div id="card-errors" role="alert" style='background-color: #fa755a;'></div><%  %>
      <br/>
      <button class="btn btn-lg btn-success btn-block">Submit Payment</button>

    <% end %>
  </div>
</div>