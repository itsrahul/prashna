<% if logged_in? %>
  <strong>Hello, <%= current_user.name %></strong>
<% end %>

<%= form_with(model: @questions, url: search_questions_path, remote: true, method: :get,
  class: "form-inline my-2 my-lg-0" ) do |form| %>
  <div class="form-group search-button">
    <%= form.text_field :title, class: "form-control mr-sm-2" %>
    <%= form.submit "Search", class: "btn btn-secondary my-2 my-sm-0" %>
  </div>
  <% content_for :js do -%>
    <%= javascript_include_tag 'search', 'data-turbolinks-track': 'reload' %>
  <% end -%>
<% end %>
<br>
<div class='questions-list'>
  <% @questions.each do |question| %>
  <% #FIXME_AB: extract in a partial -%>
    <div class="card bg-light mb-3" style="max-width: 150rem;">
      <div class="card-header">
        <h5 class="card-title"><%= question.title.capitalize %></h5>
      </div>
      <div class="card-body">
        <p class="card-text"><%= markdown(question.content) %></p>
        <p class="card-text">
        <% if question.topics.exists? %>
        <% #FIXME_AB: make these topis a link. click on that would filter questions belongs to these topic -%>
          <%= question.topics.pluck(:name) %>
        <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>
<br>
