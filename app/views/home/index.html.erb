<% if logged_in? %>
  <strong>Hello, <%= current_user.name %></strong>
<% end %>

<%= form_with(model: @questions, url: search_questions_search_path, remote: true, method: :get,
  class: "form-inline my-2 my-lg-0" ) do |form| %>
  <div class="form-group search-button">
    <%= form.text_field :title, class: "form-control mr-sm-2", placeholder: "Search by title or topic name" %>
    <%= form.submit "Search", class: "btn btn-secondary my-2 my-sm-0" %>
  </div>
  <% content_for :js do -%>
    <%= javascript_include_tag 'search', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'answer', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'comment', 'data-turbolinks-track': 'reload' %>
  <% end -%>
<% end %>
<br>
<div class='questions-list'>
  <% #FIXME_AB: extract in a partial -%>
  <%= render partial: "shared/questions" %>
</div>
<center><%#= will_paginate @questions, class: "flickr_pagination" %></center>

<br>

</nav>