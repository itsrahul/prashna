<% @answers.each do |answer| %>
<div class="card bg-success mb-3" style="max-width: 150rem;">
  <div class="card-body">
    <p class="card-text"><%= answer.content %></p>
    <p class="card-text">- <%= answer.user.name %></p>
  </div>
  <% if answer.comments %>
  <div class="answer-comment-list flex-container">
    <% @comments = answer.comments %>
    <%= render partial: "shared/comments" %>
  </div>
  <% end %>
    <%= form_with(model: answer, url: answer_comments_path(answer.id), remote: true, method: :post, class: "form-inline my-2 my-lg-0" ) do |form| %>
      <div class="form-group answer-comment-div">
        <%= form.text_field :comment, class: "form-control mr-sm-2", placeholder: "Comment on answer", autocomplete: "off" %>
        <%= form.submit "Comment", class: "btn btn-secondary my-2 my-sm-0" %>
      </div>
    <% end %>

</div>
<% end %>
<br>
