<section class="depot_form">

  <%= form_tag do %>
    <h2><%= t('.salutation') %></h2>
    <div class="form-group">
      <%= label_tag :email, t('.email') %>
      <%= text_field_tag :email, params[:email], class: "form-control rounded"%>
    <small id="emailHelp" class="form-text text-muted">Don't ever share your login credentials with anyone else.</small>
    </div>

    <div class="form-group">
      <%= label_tag :password, t('.password') %>
      <%= password_field_tag :password, params[:password], class: "form-control rounded" %>
    </div>
    <div>

    <div class="form-group d-flex justify-content-between mt-4">
      <%= link_to t('.forgot_password'), password_resets_new_path %>
      <%= label_tag(:remember_me, class: "form-check-label") do %>
        <%= check_box_tag :remember_me , params[:remember_me], class: 'form-check-input custom-checkbox'%>
        <%= t('.remember_me') %>
      <% end  %>
      <br>
      <%= submit_tag t('.login_btn'), class: "btn btn-primary rounded" %>
    </div>
  <%= link_to 'New here? Signup', signup_path %>
  <% end %>
</section>
