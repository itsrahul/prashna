<section class="depot_form">

  <%= form_tag do %>
    <h2><%= t('.salutation') %></h2>
    <div class="form-group">
      <%= label_tag :email, t('.email') %>
      <%= text_field_tag :email, params[:email], class: "form-control"%>
    <small id="emailHelp" class="form-text text-muted">Don't ever share your login credintials with anyone else.</small>
    </div>

    <div class="form-group">
      <%= label_tag :password, t('.password') %>
      <%= password_field_tag :password, params[:password], class: "form-control" %>
    </div>
    <div>

    <div>
      <%= link_to t('.forgot_password'), password_resets_new_path %>
      <%= check_box_tag :remember_me , params[:remember_me], class: 'form-check-input'%>
      <%= label_tag :remember_me, t('.remember_me') %><br>
      <%= submit_tag t('.login_btn'), class: "btn btn-primary" %>
    </div>
    <% #FIXME_AB: give a link to signup form -%>
  <%= link_to 'New here? Signup', signup_path %>
  <% end %>
</section>
