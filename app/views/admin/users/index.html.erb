<h2>Users</h2>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Verified</th>
      <th>Credits</th>
      <th>Disabled</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="table-light">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.verified? ? "Yes" : "No" %></td>
        <td><%= user.credits %></td>
        <% if user.disabled? %>
          <td>Yes</td>
          <td><%= link_to 'Enable', admin_enable_user_path(user.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td>No</td>
          <td><%= link_to 'Disable', admin_disable_user_path(user.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
