<%= form_with model: @user, url: send_token_users_url(@user.reset_token), method: :post, local: true do |form| %>

<% #FIXME_AB: send as object so that partial can be reused other places -%>
  <%= render "shared/error", user: @user %>
  <div class="field">
    Hello <%= @user.name %>,
  </div>

  <div class="field">
    <%=form.label :password %>
    <%=form.password_field :password %>
  </div>
  <div class="field">
    <%=form.label :confirmation %>
    <%=form.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%=form.submit "Update Password" %>
  </div>
<% end %>
