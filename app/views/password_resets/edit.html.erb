<%= form_with model: @user, url: send_token_user_url(@user.id, @user.reset_token), method: :post, local: true do |form| %>

<% #FIXME_AB: this logic to show erros will be repeated. Move this to a partial views/shared/_error.html.erb -%>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    Hello <%= @user.name %>,
  </div>

  <div class="field">
    <%=form.label :password %>
    <%=form.password_field :password %>
  </div>
  <div class="field">
    <%=form.label :confirmation %>
    <%=form.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%=form.submit "Update Password" %>
  </div>
<% end %>
