<%= form_with(model: user, local: true) do |form| %>
  <%= render "shared/error", object: user %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control rounded" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control rounded" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control rounded" %>
    <small id="passwordHelp" class="form-text text-muted">Minimum length 4, must have minimum 1 digit, 1 alphabet</small>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control rounded" %>
  </div>

  <% if user.verified? %>
    <div class="form-group">
      <%= form.label :profile_image %>
      <%= form.file_field :profile_image, accept: 'image/png,image/gif,image/jpeg' %>
    </div>

    <% content_for :js do -%>
      <%= javascript_include_tag 'autocomplete_topics', 'data-turbolinks-track': 'reload' %>
    <% end -%>

    <div class="form-group">
      <%= form.label :topic %>
      <%= form.text_field :topic, value: user.topics.pluck(:name).join(', '), data: { url: topics_path }, class: "form-control" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-between">
    <%= form.submit "Submit", class: "btn btn-primary rounded" %>
    <%= link_to 'Back', root_path %>
  </div>
<% end %>
